<!--?xml version="1.0" encoding="utf-8"?-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	android:background="#EFEFEF">
 
    <TextView 
        android:id="@+id/childtext" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:paddingLeft="@dimen/padding_global"
	    android:paddingTop="@dimen/padding_global"
	    android:textSize="@dimen/textsize_global"  
	    android:textStyle="bold"
	    android:textColor="#000000"
	    android:layout_alignParentLeft="true"/>
    <TextView 
        android:id="@+id/desctext_name" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:paddingLeft="@dimen/padding_global"
	    android:paddingBottom="5dp"
	    android:textSize="@dimen/textsize_global_medium"  
	    android:textColor="#333333"
	    android:layout_below="@id/childtext"/>
	<TextView 
        android:id="@+id/desctext_keypoint" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:paddingLeft="@dimen/padding_global"
	    android:textSize="@dimen/textsize_global_medium"  
	    android:textColor="#333333"
	    android:layout_below="@id/desctext_name"
	    android:visibility="gone"/>
	<TextView 
        android:id="@+id/desctext_keypoint2" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:paddingLeft="@dimen/padding_global"
	    android:paddingBottom="@dimen/padding_global"
	    android:layout_marginRight="30dp"
	    android:textSize="@dimen/textsize_global_medium"  
	    android:textColor="#333333"
	    android:layout_below="@id/desctext_keypoint"/>
	<ImageView  
	    android:src="@drawable/arrow_black_right"
	    android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_centerVertical="true"
		android:paddingRight="@dimen/padding_global"
		android:contentDescription="@string/desc"
		android:layout_alignParentRight="true"/>
</RelativeLayout>